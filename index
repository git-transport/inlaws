<body>
    <div class="timer-container">
        <h1 class="title">In-Laws Visit</h1>
        <p class="subtitle">They arrive on July 3rd, 2025</p>
        
        <div class="countdown" id="countdown">
            <div class="time-unit">
                <span class="time-number" id="days">--</span>
                <span class="time-label">Days</span>
            </div>
        </div>
        
        <div class="message" id="message">
            Get ready for the visit!
        </div>
    </div>

    <script>
        function updateCountdown() {
            const targetDate = new Date('2025-07-03T00:00:00').getTime();
            const now = new Date().getTime();
            const difference = targetDate - now;

            const days = Math.floor(difference / (1000 * 60 * 60 * 24));

            const daysEl = document.getElementById('days');
            const messageEl = document.getElementById('message');

            if (difference > 0) {
                daysEl.textContent = days.toString().padStart(2, '0');
                
                if (days === 0) {
                    messageEl.textContent = "Today's the day!";
                    messageEl.classList.add('pulse');
                } else if (days === 1) {
                    messageEl.textContent = "Tomorrow they arrive!";
                } else if (days <= 7) {
                    messageEl.textContent = "Less than a week to go!";
                } else {
                    messageEl.textContent = "Get ready for the visit!";
                }
            } else {
                daysEl.textContent = '00';
                messageEl.textContent = "Your in-laws have arrived! ðŸŽ‰";
                messageEl.classList.add('arrived');
            }
        }

        // Update immediately and then every second
        updateCountdown();
        setInterval(updateCountdown, 1000);
    </script>
